%Colors of different items
\setbeamercolor{structure}{fg=ugentblue, bg = ugentblue}
\setbeamercolor{normal text}{fg=ugentblue}
\setbeamercolor{frametitle}{fg=ugentblue}
\setbeamercolor{frame number in foot}{fg=ugentblue}
